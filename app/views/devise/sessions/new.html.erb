<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        ログイン
      </h1>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email ,'メールアドレス',class: 'label'%>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class:'input' %>
  </div>

  <div class="field">
    <%= f.label :password,'パスワード',class:'label' %>
    <%= f.password_field :password, autocomplete: "current-password" ,class:'input'%>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me,'ログインを保持する'%>
    </div>
  <% end %>

  <div class="actions p-4 columns">
    <%= f.submit "ログイン",class:'button is-success' %>
    <%= render "devise/shared/links" %>
  </div>
<% end %>


</div>
</div>
</div>
</section>