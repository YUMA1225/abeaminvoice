<section class="hero is-success">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        新規登録
      </h1>
    </div>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-6">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :username ,'ユーザー名',class: 'label'%>
    <%= f.text_field :username, autofocus: true, autocomplete: "ユーザー名" ,class:'input'%>
  </div>

  <div class="field">
    <%= f.label :email ,'メールアドレス',class:'label'%>
    <%= f.email_field :email, autofocus: true, autocomplete: "メールアドレス" ,class:'input'%>
  </div>

  <div class="field">
    <%= f.label :password ,'パスワード',class:'label'%>
    <% if @minimum_password_length %>
    (<%= @minimum_password_length %>文字以上)
    <% end %>
    <%= f.password_field :password, autocomplete: "新しいパスワード",class:'input' %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation ,'パスワードの確認',class:'label'%>
    <%= f.password_field :password_confirmation, autocomplete: "新しいパスワード" ,class:'input'%>
  </div>

  <div class="actions p-4 columns">
    <%= f.submit "新規登録" ,class:'button is-success'%>
    <%= render "devise/shared/links" %>
  </div>
<% end %>


</div>
</div>
</div>
</section>