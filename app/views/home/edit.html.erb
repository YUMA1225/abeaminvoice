<section class="hero is-info">
    <div class="hero-body">
        <div class="container">
            <h1 class="title">
                ユーザー情報編集
            </h1>
        </div>
    </div>
</section>


<section class="section">
    <div class="container">
        <div class="columns is-centered">
            <div class="column is-6">

                <div class="field">
<%= form_for @user, url: home_path, local: true do |f| %>

    <%= f.label :username,'ユーザー名' ,class:'label'%>
    <%= f.text_field :username ,class: 'input'%>

    <%= f.label :company,'会社名',class:'label' %>
    <%= f.text_field :company,class:'input' %>

    <%= f.label :email ,'メールアドレス',class:'label'%>
    <%= f.text_field :email ,class:'input'%>

    <%= f.label :account,'振込先' ,class:'label'%>
    <%= f.text_area :account , :size =>"20x4",class:'textarea' %>
<div class="columns p-4">
    <%=link_to '戻る', home_index_path,class: 'button block'%>
    <%= f.submit '更新',class: 'button is-success ml-4 is-right' %>
</div>





    </div>
    

<% end %>
   


            </div>
        </div>
    </div>
</section>